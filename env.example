# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/crisis_crew
POSTGRES_DB=crisis_crew
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=YOUR_UPSTASH_REDIS_URL
UPSTASH_REDIS_REST_TOKEN=YOUR_UPSTASH_REDIS_TOKEN

# NATS
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=test-cluster
NATS_CLIENT_ID=crisis-crew

# Object Storage (S3/R2)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=crisis-crew
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# CrewAI
CREWAI_API_KEY=your-crewai-api-key
CREWAI_BASE_URL=https://api.crewai.com

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
OTEL_ENDPOINT=http://localhost:4317

# Application
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Ports
FRONTEND_PORT=3000
GATEWAY_PORT=3001
ORCHESTRATOR_PORT=8000
WORKERS_PORT=8001

# Feature Flags
ENABLE_MONITORING=true
ENABLE_EXPORTS=true
ENABLE_LEGAL_LINT=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/plain

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-key-here

# Development
DEBUG=true
LOG_LEVEL=debug
